{%- assign background_image = section.settings.background_image -%}
{%- capture text_color -%}
    {% if background_image != blank %}#FFFFFF{%- else -%}#707070{% endif %}
{%- endcapture -%}

<div class="bg-smcr-light-gray {%- if background_image != blank %} text-white{%- else %} text-smcr-gray{%- endif %} overflow-hidden relative">
    {% if section.settings.background_image != blank %}
        <!-- Background Image -->
        <div class="absolute top-0 bottom-0 left-0 right-0">
            {% comment %}theme-check-disable{% endcomment %}
            <img class="h-full w-full object-cover" src="{{ section.settings.background_image | img_url: 'master' }}" alt="{{ section.settings.background_image.alt }}">
            {% comment %}theme-check-enable{% endcomment %}
        </div>
        
        <!-- Background Image Overlay -->
        <div class="absolute top-0 bottom-0 left-0 right-0 bg-black opacity-50"></div>
    {% endif %}
    
    <div class="max-w-screen-2xl mx-auto px-4 py-24 flex flex-col justify-center space-y-4 text-center relative">
        
        <!-- Top Left Image -->
        <div class="absolute -top-7 md:-top-14 left-10">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-24 md:h-44 w-auto" viewBox="0 0 345.031 412.563"><g transform="translate(-123.248 -51.126)"><path d="M135.644,291.09c129.9,91.876,209.221,88.787,264.629,34.1,52.841-52.15,84.8-153.964,84.8-153.964" transform="translate(404.188 -139.301) rotate(65)" fill="none" stroke="{{ text_color }}" stroke-width="15"/><line x1="69" y1="41" transform="translate(389 335)" fill="none" stroke="{{ text_color }}" stroke-linecap="round" stroke-width="15"/><line x1="69" y2="41" transform="translate(388 377)" fill="none" stroke="{{ text_color }}" stroke-linecap="round" stroke-width="15"/></g></svg>
        </div>
        <!-- Bottom Right Image -->
        <div class="absolute -bottom-7 md:-bottom-14 right-10">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-24 md:h-44 w-auto"  viewBox="0 0 290.003 277.849"><g transform="translate(-11.459 182.535)"><path d="M26.416-117.235l114.97,37.564V75.094L26.416,38.389Z" transform="translate(0.597 2.26)" fill="#dcaa79"/><path d="M150.731-78.984l129.623-38.245V38.809L150.731,75.1Z" transform="translate(5.73 2.253)" fill="#ab7d69"/><path d="M149.222-91.207l119.13-34.986L149.222-166.87,42.275-126.193Z" transform="translate(0.161 0.625)" fill="#ab7d69"/><g transform="translate(148.931 -125.25)"><line y1="171.813" transform="translate(144.739)" fill="none" stroke="#3c434a" stroke-width="15"/><line y1="42.693" x2="144.739" fill="none" stroke="#3c434a" stroke-width="15"/><line x1="144.739" y2="40.61" transform="translate(0 171.813)" fill="none" stroke="#3c434a" stroke-width="15"/><line y2="169.73" transform="translate(0 42.693)" fill="none" stroke="#3c434a" stroke-width="15"/></g><g transform="translate(19.291 -125.561)"><line x1="129.64" y1="42.693" transform="translate(0)" fill="none" stroke="#3c434a" stroke-width="15"/><line y1="170.771" transform="translate(0)" fill="none" stroke="#3c434a" stroke-width="15"/><line x2="129.64" y2="41.652" transform="translate(0 171.082)" fill="none" stroke="#3c434a" stroke-width="15"/><line y2="169.73" transform="translate(129.64 43.004)" fill="none" stroke="#3c434a" stroke-width="15"/></g><g transform="translate(19.811 -174.19)"><line y1="48.941" x2="129.12" transform="translate(0)" fill="none" stroke="#3c434a" stroke-width="15"/><line x1="144.739" y1="48.941" transform="translate(129.12)" fill="none" stroke="#3c434a" stroke-width="15"/><line x1="144.739" y2="42.693" transform="translate(129.12 48.941)" fill="none" stroke="#3c434a" stroke-width="15"/><line x2="129.12" y2="42.693" transform="translate(0 48.941)" fill="none" stroke="#3c434a" stroke-width="15"/></g><path d="M16.667,43.547l-4.976-1.941V33.313h8.354Z" transform="translate(0.298 8.89)" fill="#3c434a" stroke="#3c434a" stroke-width=