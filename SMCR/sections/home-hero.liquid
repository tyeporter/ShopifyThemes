        </div>

        {%- for block in section.blocks -%}
            {%- case block.type -%}
                {%- when 'heading' -%}
                    <!-- Heading -->
                    <div>
                        <h1 class="font-bungee text-4xl md:text-5xl">{{ block.settings.heading }}</h1>
                    </div>
                {%- when 'statement' -%}
                    <!-- Statement -->
                    <div class="max-w-screen-sm mx-auto font-bold text-sm md:text-base flex justify-center text-center md:text-justify">
                        {{ block.settings.statement }}
                    </div>
            {%- endcase -%}
        {%- endfor -%}
    </div>
</div>

{% schema %}
{
    "name": "Hero (Home)",
    "tag": "section",
    "class": "home-hero",
    "blocks": [
        {
            "type": "heading",
            "name": "Heading",
            "limit": 1,
            "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading Text",
                    "default": "Default Heading"
                }
            ]
        },
        {
            "type": "statement",
            "name": "Statement",
            "limit": 1,
            "settings": [
                {
                    "type": "richtext",
                    "id": "statement",
                    "label": "Statement Text",
                    "default": "<p>This is an example statement</p>"
                }
            ] 
        }
    ],
    "settings": [
        {
            "type": "image_picker",
            "id": "background_image",
            "label": "Background Image"
        }
    ]
}
{% endschema %}