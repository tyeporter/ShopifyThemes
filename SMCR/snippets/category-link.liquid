{%- comment -%}
    bg-candy-blue
    bg-candy-pink
    bg-candy-purple
    bg-candy-yellow
{%- endcomment -%}
<a href="{{ link.url }}" class="relative inline-block rounded-2xl inner-shadow bg-candy-{{ backgroundColor }}">
    <!-- Text -->
    <div class="h-full w-full flex items-start justify-start">
        <div class="mt-3 ml-3 flex items-center font-bold text-sm text-white">
            {{ link.title }}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </div>
    </div>

    {%- if image != blank -%}
        <!-- Image -->
        <div class="absolute bottom-3 right-3 h-2/3">
            {%- comment -%}theme-check-disable{%- endcomment -%}
            <img src="{{ image | img_url: 'medium' }}" alt="{{ image.alt }}" class="h-full w-auto">
            {%- comment -%}theme-check-enable{%- endcomment -%}
        </div>
    {%- endif -%}
</a>